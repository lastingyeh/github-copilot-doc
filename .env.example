# TinyURL 服務環境變數配置範例
# 複製此檔案為 .env 並修改為適合的值

# === 應用程式配置 ===
SERVER_PORT=8080
MANAGEMENT_PORT=8080
SPRING_PROFILES_ACTIVE=local

# === 資料庫配置 ===
DB_HOST=postgres
DB_PORT=5432
DB_NAME=tinyurl_db
DB_USERNAME=tinyurl_user
DB_PASSWORD=tinyurl_pass
DB_POOL_MIN=5
DB_POOL_MAX=20
DB_IDLE_TIMEOUT=300000
DB_MAX_LIFETIME=600000
DB_CONNECT_TIMEOUT=30000

# === Redis 快取配置 ===
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TIMEOUT=2000ms
REDIS_POOL_MAX_ACTIVE=8
REDIS_POOL_MAX_IDLE=8
REDIS_POOL_MIN_IDLE=0
REDIS_POOL_MAX_WAIT=2000ms

# === 日誌配置 ===
LOG_LEVEL=INFO
WEB_LOG_LEVEL=WARN
SQL_LOG_LEVEL=WARN
SQL_PARAM_LOG_LEVEL=WARN
LOG_FORMAT=console
LOG_FILE=logs/tinyurl-api.log
LOG_FILE_MAX_SIZE=100MB
LOG_FILE_MAX_HISTORY=30

# === JPA/Hibernate 配置 ===
SHOW_SQL=false
FORMAT_SQL=true

# === 監控配置 ===
HEALTH_SHOW_DETAILS=when_authorized
SWAGGER_ENABLED=true

# === Docker 服務配置 ===
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin123

# === 開發模式配置 ===
# 設為 true 時啟用詳細日誌和除錯功能
DEBUG_MODE=false
